{
  "name": "@gapizza/eslint-config",
  "description": "General purpose Node ESLint configuration",
  "version": "1.6.1",
  "author": "Eric Hacke",
  "bugs": {
    "url": "https://github.com/gapizza/eslint-config/issues"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@gapizza/commitlint-config": "^1.0.1",
    "@gapizza/prettier-config": "^1.0.1",
    "commitizen": "^4.2.4",
    "commitlint": "^12.1.4",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.29.0",
    "fixpack": "^4.0.0",
    "husky": "^6.0.0",
    "prettier": "^2.3.1",
    "prettier-eslint-cli": "^5.0.1"
  },
  "engineStrict": true,
  "engines": {
    "npm": ">=7.0.0"
  },
  "files": [
    "*.js",
    "!scratch.*"
  ],
  "homepage": "https://github.com/gapizza/eslint-config#readme",
  "keywords": [
    "eslint"
  ],
  "license": "MIT",
  "main": "index.js",
  "peerDependencies": {
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-compat": "^3.9.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-filenames": "^1.3.2",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-lodash": "^7.2.0",
    "eslint-plugin-mocha": "^9.0.0",
    "eslint-plugin-no-secrets": "^0.8.9",
    "eslint-plugin-optimize-regex": "^1.2.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-sonarjs": "^0.7.0",
    "eslint-plugin-sort-keys-fix": "^1.1.1",
    "eslint-plugin-unicorn": "^33.0.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gapizza/eslint-config.git"
  },
  "scripts": {
    "beta": "npm version prerelease && npm publish --tag beta",
    "commit": "git-cz",
    "lint": "fixpack && prettier-eslint --write && eslint --fix \"**/*.{js,ts}\"",
    "major": "npm version major && npm publish",
    "minor": "npm version minor && npm publish",
    "patch": "npm version patch && npm publish",
    "postpublish": "git push",
    "prepare": "fixpack && husky install",
    "preversion": "npm run lint",
    "test": "echo \"Error: no test specified\" && exit 1"
  }
}
